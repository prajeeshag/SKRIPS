&time_control
start_year               = $start_year,   
start_month              = $start_month,     
start_day                = $start_day,     
start_hour               = $start_hour,     
start_minute             = 00,     
start_second             = 00,     
end_year                 = $end_year,   
end_month                = $end_month,     
end_day                  = $end_day,     
end_hour                 = $end_hour,  ! Adding extra one hour: due the WRF not writing restart file
end_minute               = 00,     
end_second               = 00,     
interval_seconds         = 21600,             ! 6-hourly forcing data
input_from_file          = .true.,  
history_interval         = 180,               ! minutes 
frames_per_outfile       = 8,      
restart                  = $restart,
restart_interval         = $restart_interval,             ! minutes
io_form_restart          = 2,                 ! split restart file
io_form_history          = 2,
auxinput4_inname         = "wrflowinp_d<domain>"
auxinput4_interval       = 720,      720,     ! 12-hourly forcing data
io_form_auxinput4        = 2,
debug_level              = 0,

! Used in old Skrips implementation
!auxinput5_inname                    = 'wrf_esmf_input',
!auxinput5_interval_s                = 120,
!auxinput5_end_d                     = 60,
!io_form_auxinput5                   = 7,
!auxhist5_outname                    = 'wrf_esmf_output',
!frames_per_auxhist5                 = 100000,
!auxhist5_interval_s                 = 120,
!auxhist5_end_d                      = 60,
!io_form_auxhist5                    = 7,
/

&domains
